<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Pages.Client.AddEditCardPage"
             Title="Добавить карту">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Информация о карте" FontSize="22" FontAttributes="Bold" Margin="0,0,0,10"/>

            <Label Text="Номер карты" FontSize="16" />
            <Entry x:Name="CardNumberEntry" 
                   Placeholder="1234 5678 9012 3456" 
                   Keyboard="Numeric"
                   MaxLength="19" />

            <Label Text="Имя держателя карты" FontSize="16" />
            <Entry x:Name="CardHolderEntry" 
                   Placeholder="IVAN IVANOV" />

            <Label Text="Срок действия (MM/YY)" FontSize="16" />
            <Entry x:Name="ExpiryDateEntry" 
                   Placeholder="05/25" 
                   MaxLength="5" />

            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15" Margin="0,10">
                <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Сделать основной картой" 
                              FontSize="16"
                              FontAttributes="Bold" />
                        <Label Text="Эта карта будет использоваться по умолчанию при оплате" 
                               FontSize="12"
                               TextColor="Gray" />
                    </VerticalStackLayout>
                    <Switch x:Name="DefaultCardSwitch" 
                            Grid.Column="1" />
                </Grid>
            </Frame>

            <Button Text="Сохранить" 
                    BackgroundColor="#0078D7"
                    TextColor="White"
                    Margin="0,20,0,0"
                    Clicked="OnSaveClicked" />

            <Button x:Name="CancelButton"
                    Text="Отмена" 
                    BackgroundColor="Gray"
                    TextColor="White"
                    Margin="0,10,0,0"
                    Clicked="OnCancelClicked" />

            <Button x:Name="DeleteButton"
                    Text="Удалить карту" 
                    BackgroundColor="#FF3B30"
                    TextColor="White"
                    Margin="0,10,0,0"
                    IsVisible="{Binding IsEditing}"
                    Clicked="OnDeleteClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
