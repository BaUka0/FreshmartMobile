<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Pages.ProductDetail"
             Title="Детали продукта">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Image x:Name="ProductImage"
                   HeightRequest="200"
                   Aspect="AspectFit"
                   HorizontalOptions="Center" />

            <Label x:Name="ProductNameLabel"
                   FontSize="28"
                   TextColor="Black"
                   HorizontalOptions="Center" />

            <Label x:Name="ProductDescriptionLabel"
                   FontSize="18"
                   TextColor="Gray"
                   HorizontalOptions="Center" />

            <Label x:Name="ProductPriceLabel"
                   FontSize="22"
                   TextColor="Green"
                   HorizontalOptions="Center" />

            <!-- Новая секция для отзывов -->
            <Label Text="Оставить отзыв:" 
                   FontSize="20"
                   TextColor="Black"
                   HorizontalOptions="Start" />

            <Editor x:Name="ReviewEditor"
                    Placeholder="Напишите ваш отзыв здесь..."
                    AutoSize="TextChanges"
                    HeightRequest="100"
                    BackgroundColor="#f0f0f0"
                    TextColor="Black" />

            <Button Text="Отправить отзыв"
                    BackgroundColor="Green"
                    TextColor="White"
                    Clicked="OnSubmitReviewClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
