<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Project.Converters"
             x:Class="Project.Pages.SearchPage"
             BackgroundColor="White"
             Title="Поиск товаров">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="20">

            <!-- Поле поиска на новой странице -->
            <SearchBar Placeholder="Поиск товаров..."
                       TextChanged="OnSearchTextChanged"
                       HorizontalOptions="FillAndExpand" />

            <!-- Список результатов поиска -->
            <CollectionView x:Name="SearchResultsCollectionView"
                            ItemsSource="{Binding SearchResults}"
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Span="2" Orientation="Vertical"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" CornerRadius="10" Padding="10" Margin="5" HasShadow="True">
                            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">

                                <Image WidthRequest="80"
                                       HeightRequest="80"
                                       Aspect="AspectFit"
                                       HorizontalOptions="Center"
                                       Source="{Binding ImageData, Converter={StaticResource ByteArrayToImageSourceConverter}}" />

                                <Label Text="{Binding Name}"
                                       FontSize="18"
                                       HorizontalOptions="Center"
                                       TextColor="Black"/>

                                <Label Text="{Binding Description}"
                                       FontSize="14"
                                       HorizontalOptions="Center"
                                       TextColor="Gray"/>

                                <Label Text="{Binding Price}"
                                       FontSize="16"
                                       HorizontalOptions="Center"
                                       TextColor="Green"/>

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
