<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Project.Converters"
             x:Class="Project.Pages.SearchPage"
             BackgroundColor="White"
             Title="Поиск товаров">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Строка поиска -->
        <SearchBar Grid.Row="0" 
                   x:Name="searchBar"
                   Placeholder="Поиск товаров..."
                   TextChanged="OnSearchTextChanged"
                   Margin="10,10,10,0"
                   HorizontalOptions="FillAndExpand" />

        <!-- Секция фильтров по категориям -->
        <Grid Grid.Row="1" Margin="10,5,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" 
                   Text="Категории" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   Margin="0,10,0,5"/>

            <ScrollView Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalScrollBarVisibility="Never">
                <HorizontalStackLayout x:Name="categoriesContainer" 
                                       Spacing="10"
                                       Margin="0,0,0,10">
                    <!-- Категории будут добавлены динамически -->
                </HorizontalStackLayout>
            </ScrollView>
        </Grid>

        <!-- Результаты поиска -->
        <ScrollView Grid.Row="2">
            <VerticalStackLayout Padding="10" Spacing="10">
                <Label x:Name="resultsCountLabel" 
                       Text="Найдено товаров: 0"
                       FontSize="16"
                       TextColor="Gray"
                       Margin="0,0,0,10"/>

                <CollectionView x:Name="SearchResultsCollectionView"
                                ItemsSource="{Binding SearchResults}"
                                SelectionMode="None"
                                EmptyView="Нет результатов, соответствующих вашему запросу">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Span="2" Orientation="Vertical"/>
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="LightGray" 
                                   CornerRadius="10" 
                                   Padding="10" 
                                   Margin="5" 
                                   HasShadow="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnProductTapped"/>
                                </Frame.GestureRecognizers>

                                <VerticalStackLayout HorizontalOptions="Center" 
                                                     VerticalOptions="Center" 
                                                     Spacing="10">

                                    <Image WidthRequest="80"
                                           HeightRequest="80"
                                           Aspect="AspectFit"
                                           HorizontalOptions="Center"
                                           Source="{Binding ImageData, Converter={StaticResource ByteArrayToImageSourceConverter}}" />

                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           HorizontalOptions="Center"
                                           TextColor="Black"/>

                                    <Label Text="{Binding Description}"
                                           FontSize="14"
                                           HorizontalOptions="Center"
                                           MaxLines="2"
                                           LineBreakMode="TailTruncation"
                                           TextColor="Gray"/>

                                    <Label Text="{Binding Price}"
                                           FontSize="16"
                                           HorizontalOptions="Center"
                                           TextColor="Green"/>

                                    <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                                        <ImageButton Source="{Binding FavoriteIcon}"
                                                     Clicked="OnLikeClicked"
                                                     BackgroundColor="Transparent"
                                                     WidthRequest="40"
                                                     HeightRequest="40"
                                                     Aspect="AspectFit"
                                                     IsVisible="{Binding IsFavoriteButtonVisible}" />

                                        <ImageButton Source="{Binding CartIcon}"
                                                     Clicked="OnAddToCartClicked"
                                                     BackgroundColor="Transparent"
                                                     WidthRequest="40"
                                                     HeightRequest="40"
                                                     Aspect="AspectFit"
                                                     IsVisible="{Binding IsCartButtonVisible}" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
