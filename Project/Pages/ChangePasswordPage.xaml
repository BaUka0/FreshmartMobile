<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Pages.ChangePasswordPage"
             Title="Құпия сөзді өзгерту">
    <Grid Padding="20">
        <StackLayout VerticalOptions="Center">
            <Label Text="Құпия сөзді өзгерту" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,30"/>

            <Frame BorderColor="LightGray" Padding="15" Margin="0,0,0,15">
                <StackLayout>
                    <Label Text="Ағымдағы құпия сөз" FontSize="16"/>
                    <Entry x:Name="CurrentPasswordEntry" IsPassword="True" Placeholder="Ағымдағы құпия сөзді енгізіңіз" Margin="0,5,0,0"/>
                </StackLayout>
            </Frame>

            <Frame BorderColor="LightGray" Padding="15" Margin="0,0,0,15">
                <StackLayout>
                    <Label Text="Жаңа құпия сөз" FontSize="16"/>
                    <Entry x:Name="NewPasswordEntry" IsPassword="True" Placeholder="Жаңа құпия сөзді енгізіңіз" Margin="0,5,0,0"/>
                </StackLayout>
            </Frame>

            <Frame BorderColor="LightGray" Padding="15" Margin="0,0,0,30">
                <StackLayout>
                    <Label Text="Құпия сөзді Растау" FontSize="16"/>
                    <Entry x:Name="ConfirmPasswordEntry" IsPassword="True" Placeholder="Жаңа құпия сөзді қайталаңыз" Margin="0,5,0,0"/>
                </StackLayout>
            </Frame>

            <Button Text="Сақтау" Clicked="OnSaveClicked" BackgroundColor="Green" TextColor="White" Margin="0,0,0,15"/>
            <Button Text="Болдырмау" Clicked="OnCancelClicked" BackgroundColor="LightGray" TextColor="Black"/>
        </StackLayout>
    </Grid>
</ContentPage>
