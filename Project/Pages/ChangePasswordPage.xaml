<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Pages.ChangePasswordPage"
             Title="Изменение пароля">
    <Grid Padding="20">
        <StackLayout VerticalOptions="Center">
            <Label Text="Изменение пароля" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,30"/>

            <Frame BorderColor="LightGray" Padding="15" Margin="0,0,0,15">
                <StackLayout>
                    <Label Text="Текущий пароль" FontSize="16"/>
                    <Entry x:Name="CurrentPasswordEntry" IsPassword="True" Placeholder="Введите текущий пароль" Margin="0,5,0,0"/>
                </StackLayout>
            </Frame>

            <Frame BorderColor="LightGray" Padding="15" Margin="0,0,0,15">
                <StackLayout>
                    <Label Text="Новый пароль" FontSize="16"/>
                    <Entry x:Name="NewPasswordEntry" IsPassword="True" Placeholder="Введите новый пароль" Margin="0,5,0,0"/>
                </StackLayout>
            </Frame>

            <Frame BorderColor="LightGray" Padding="15" Margin="0,0,0,30">
                <StackLayout>
                    <Label Text="Подтверждение пароля" FontSize="16"/>
                    <Entry x:Name="ConfirmPasswordEntry" IsPassword="True" Placeholder="Повторите новый пароль" Margin="0,5,0,0"/>
                </StackLayout>
            </Frame>

            <Button Text="Сохранить" Clicked="OnSaveClicked" BackgroundColor="Green" TextColor="White" Margin="0,0,0,15"/>
            <Button Text="Отмена" Clicked="OnCancelClicked" BackgroundColor="LightGray" TextColor="Black"/>
        </StackLayout>
    </Grid>
</ContentPage>
