<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Pages.Admin.SellerApplicationHistoryPage"
             Title="История заявок">
    <VerticalStackLayout Padding="10" Spacing="10">

        <!-- Используем CollectionView для отображения списка заявок -->
        <CollectionView x:Name="ApplicationsHistoryCollectionView"
                        ItemsSource="{Binding ApplicationsHistory}">
            <CollectionView.EmptyView>
                <Label Text="Нет записей в истории заявок."
                       HorizontalOptions="Center"
                       VerticalOptions="CenterAndExpand" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeShape="RoundRectangle 5"
                            Stroke="{AppThemeBinding Light=LightGray, Dark=Gray}"
                            Padding="10"
                            Margin="0,5"
                            BackgroundColor="{AppThemeBinding Light=WhiteSmoke, Dark= #333}">
                        <VerticalStackLayout Spacing="5">
                            <!-- Отображаем информацию о пользователе -->
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Пользователь: " FontAttributes="Bold"/>
                                        <Span Text="{Binding User.username}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Email: " FontAttributes="Bold"/>
                                        <Span Text="{Binding User.email}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Дата заявки: " FontAttributes="Bold"/>
                                        <!-- Указываем формат даты/времени -->
                                        <Span Text="{Binding ApplicationDate, StringFormat='{0:dd.MM.yyyy HH:mm}'}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Статус заявки: " FontAttributes="Bold"/>
                                        <!-- Выбираем цвет текста в зависимости от статуса -->
                                        <Span Text="{Binding Status}">
                                            <Span.TextColor>
                                                <MultiBinding Converter="{StaticResource StatusToColorConverter}">
                                                    <Binding Path="Status"/>
                                                    <Binding Source="{AppThemeBinding Light=Green, Dark=LightGreen}"/>
                                                    <!-- Цвет для Accepted в светлой/темной теме -->
                                                    <Binding Source="{AppThemeBinding Light=Red, Dark=Salmon}"/>
                                                    <!-- Цвет для Rejected в светлой/темной теме -->
                                                    <Binding Source="{AppThemeBinding Light=Blue, Dark=LightBlue}"/>
                                                    <!-- Цвет для Pending в светлой/темной теме -->
                                                </MultiBinding>
                                            </Span.TextColor>
                                        </Span>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>