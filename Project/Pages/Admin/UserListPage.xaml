<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Pages.Admin.UserListPage"
             Title="Пользователи"
             x:Name="ThisPage">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="12">

            <CollectionView x:Name="UsersCollectionView"
                            ItemsSource="{Binding Users}"
                            SelectionMode="None">

                <CollectionView.EmptyView>
                    <Label Text="Пользователи не найдены."
                           FontSize="16"
                           HorizontalOptions="Center"
                           VerticalOptions="CenterAndExpand" />
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>

                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem Text="Удалить" 
                                               BackgroundColor="#D83B01" 
                                               IconImageSource="delete_icon.png"
                                               Invoked="OnDeleteSwipeItemInvoked"
                                               CommandParameter="{Binding .}" />

                                    <SwipeItem Text="Изменить" 
                                               BackgroundColor="DarkOrange" 
                                               IconImageSource="edit_icon.png"
                                               Invoked="OnEditSwipeItemInvoked"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame CornerRadius="10"
                                   Padding="15"
                                   Margin="0,6"
                                   BackgroundColor="{AppThemeBinding Light=#F9F9F9, Dark=#2C2C2C}"
                                   BorderColor="{AppThemeBinding Light=#DDD, Dark=#444}"
                                   HasShadow="True">

                                <VerticalStackLayout Spacing="5">
                                    <Label Text="{Binding username}"
                                           FontAttributes="Bold"
                                           FontSize="18" />

                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Почта: " FontAttributes="Bold"/>
                                                <Span Text="{Binding email}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>

                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Роль: " FontAttributes="Bold"/>
                                                <Span Text="{Binding role}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </VerticalStackLayout>

                            </Frame>

                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
