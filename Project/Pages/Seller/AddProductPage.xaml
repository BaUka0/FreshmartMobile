<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Pages.Seller.AddProductPage"
             Title="Добавить продукт">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry x:Name="NameEntry" Placeholder="Название товара" />
            <Editor x:Name="DescriptionEditor" Placeholder="Описание товара" AutoSize="TextChanges" />

            <Entry x:Name="PriceEntry" Placeholder="Цена (₸)" Keyboard="Numeric" />

            <Picker x:Name="CategoryPicker" Title="Выберите категорию" ItemDisplayBinding="{Binding Name}" />

            <Image x:Name="ProductImage" HeightRequest="150" Aspect="AspectFit" />
            <Button Text="Загрузить изображение" Clicked="OnUploadImageClicked" BackgroundColor="Green"/>

            <Button Text="Сохранить"
                    BackgroundColor="Green"
                    TextColor="White"
                    Clicked="OnSaveClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
