<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Pages.RegisterPage"
             Title="RegisterPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Тіркелу" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" />

            <Entry x:Name="entryUsername" Placeholder="Атыңыз" />
            <Entry x:Name="entryEmail" Placeholder="Email" Keyboard="Email" />
            <Entry x:Name="entryPassword" Placeholder="Құпия сөз" IsPassword="True" />

            <Label Text="Рөлді таңдаңыз:" FontAttributes="Bold" />

            <HorizontalStackLayout>
                <RadioButton x:Name="radioClient" Content="Клиент" GroupName="role" IsChecked="True" />
                <RadioButton x:Name="radioSeller" Content="Сатушы" GroupName="role" />
            </HorizontalStackLayout>

            <Button Text="Тіркелу" Clicked="OnRegisterClicked" BackgroundColor="#4CAF50" TextColor="White" CornerRadius="10" />

            <Label x:Name="lblMessage" TextColor="Red" IsVisible="False" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>