<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Project.Converters"
             x:Class="Project.Pages.EditProfilePage"
             Title="Редактирование профиля">
    <ContentPage.Resources>
        <converters:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
    </ContentPage.Resources>

    <Grid Padding="20">
        <StackLayout VerticalOptions="Start" Spacing="20">
            <Grid HorizontalOptions="Center" Margin="0,20,0,20">
                <Frame CornerRadius="60" 
                       IsClippedToBounds="True" 
                       BorderColor="LightGray" 
                       Padding="0" 
                       WidthRequest="120" 
                       HeightRequest="120">
                    <Image x:Name="ProfileImage"
                         Source="{Binding ProfileImageSource, Converter={StaticResource ByteArrayToImageSourceConverter}, TargetNullValue='default_profile.png'}"
                         WidthRequest="120"
                         HeightRequest="120"
                         Aspect="AspectFill" />
                </Frame>
                <Button Text="+" 
                        CornerRadius="20" 
                        WidthRequest="40" 
                        HeightRequest="40" 
                        HorizontalOptions="End" 
                        VerticalOptions="End"
                        Clicked="OnChangeProfileImageClicked"
                        BackgroundColor="Green" 
                        TextColor="White"
                        FontSize="16"
                        Margin="0,0,5,5"/>
            </Grid>

            <Frame BorderColor="LightGray" Padding="15" Margin="0,0,0,10">
                <StackLayout>
                    <Label Text="Имя пользователя" FontSize="16"/>
                    <Entry x:Name="UsernameEntry" Text="{Binding Username}" Placeholder="Введите имя пользователя" Margin="0,5,0,0"/>
                </StackLayout>
            </Frame>

            <Frame BorderColor="LightGray" Padding="15" Margin="0,0,0,30">
                <StackLayout>
                    <Label Text="Email" FontSize="16"/>
                    <Entry x:Name="EmailEntry" Text="{Binding Email}" Placeholder="Введите email" Margin="0,5,0,0"/>
                </StackLayout>
            </Frame>

            <Button Text="Сохранить" Clicked="OnSaveClicked" BackgroundColor="Green" TextColor="White" Margin="0,0,0,15"/>
            <Button Text="Отмена" Clicked="OnCancelClicked" BackgroundColor="LightGray" TextColor="Black"/>
        </StackLayout>
    </Grid>
</ContentPage>
